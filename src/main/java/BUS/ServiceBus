package BUS;

import DAO.ServiceDAO;
import DTO.Service;
import java.util.ArrayList;
import java.util.List;

public class ServiceBUS {
    private final ServiceDAO dao;
    private final List<Service> services;

    public ServiceBUS() {
        dao = new ServiceDAO();
        services = new ArrayList<>(dao.getAll());
    }

    
    public List<Service> getAll() {
        return new ArrayList<>(services);
    }

    public Service getById(int id) {
        return dao.getById(id);
    }

    public boolean add(Service s) {
        int newId = dao.insert(s);
        if (newId > 0) {
            s.setServiceId(newId);
            services.add(s);
            return true;
        }
        return false;
    }

    public boolean update(Service s) {
        boolean ok = dao.update(s);
        if (ok) {
            for (int i = 0; i < services.size(); i++) {
                if (services.get(i).getServiceId() == s.getServiceId()) {
                    services.set(i, s);
                    break;
                }
            }
        }
        return ok;
    }

    public boolean delete(int id) {
        boolean ok = dao.delete(id);
        if (ok) {
            services.removeIf(s -> s.getServiceId() == id);
        }
        return ok;
    }

    public List<Service> searchByName(String keyword) {
        return dao.searchByName(keyword);
    }

    public boolean setActive(int id, boolean active) {
        boolean ok = dao.setActive(id, active);
        if (ok) {
            for (Service s : services) {
                if (s.getServiceId() == id) {
                    s.setActive(active);
                    break;
                }
            }
        }
        return ok;
    }
}
